<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bisimulation.main.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bisimulation.main.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/playNowFragment"
        android:name="com.example.bisimulation.main.fragments.PlayNowFragment"
        android:label="PlayNowFragment"
        tools:layout="@layout/fragment_play_now" />
    <fragment
        android:id="@+id/faqFragment"
        android:name="com.example.bisimulation.main.fragments.FaqFragment"
        android:label="FaqFragment"
        tools:layout="@layout/fragment_faq"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.bisimulation.main.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>
    <fragment
        android:id="@+id/bugReportFragment"
        android:name="com.example.bisimulation.main.fragments.BugReportFragment"
        android:label="BugReportFragment"
        tools:layout="@layout/fragment_bug_report"/>
</navigation>